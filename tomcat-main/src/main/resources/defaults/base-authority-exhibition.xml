<record id="exhibition" type="authority">
    <web-url>exhibition</web-url>
    <services-tenant-plural>Exhibitionauthorities</services-tenant-plural>
    <!-- See CSPACE-5684 -->
    <!--services-tenant-singular>Exhibitionauthority</services-tenant-singular-->
    <services-tenant-singular>Exhibitionitem</services-tenant-singular>
    <services-instances-path>exhibitionauthorities_common:http://collectionspace.org/services/exhibition,abstract-common-list/list-item</services-instances-path>
    <services-single-instance-path>exhibitionauthorities_common:http://collectionspace.org/services/exhibition,exhibitionauthorities_common</services-single-instance-path>
    <services-list-path>http://collectionspace.org/services/exhibition,abstract-common-list/list-item</services-list-path>
    <services-record-path>exhibitions_common:http://collectionspace.org/services/exhibition,exhibitions_common</services-record-path>
    <services-record-path id="collectionspace_core">collectionspace_core:http://collectionspace.org/collectionspace_core/,collectionspace_core</services-record-path>
    <services-url>exhibitionauthorities</services-url>
    <authority-vocab-type>ExhibitionAuthority</authority-vocab-type>
    <hassoftdelete>true</hassoftdelete>
    <structures>
        <structure id="search">
            <view>
                <label-section id="messagekeys" show="true"></label-section>
            </view>
        </structure>
        <structure id="screen">
            <view>
                <label-section id="messagekeys" show="true"></label-section>
                <hierarchy-section show="true">
                    <options>
                        <option id="narrowerContext">exhibition-exhibition</option>
                        <option id="broaderContext">exhibition-exhibition</option>
                    </options>
                </hierarchy-section>
            </view>
        </structure>
    </structures>
                
    <include src="domain-authority-exhibition.xml" strip-root="yes"/>
                
    <instances id="exhibition">
        <instance id="exhibition-exhibition">
            <web-url>exhibition</web-url>
            <title-ref>exhibition</title-ref>
            <title>Exhibition</title>
        </instance>
    </instances>
    <section id="coreInformation">
        <field id="tenantID" section="collectionspace_core" attributes="GET"></field>
        <field id="createdBy" ui-search="repeatable" section="collectionspace_core" attributes="GET"></field>
        <field id="updatedBy" ui-search="repeatable" section="collectionspace_core" attributes="GET"></field>
        <field id="createdAt" section="collectionspace_core" attributes="GET"></field>
        <field id="updatedAt" ui-search="range" ui-type="date" section="collectionspace_core" attributes="GET" mini="search,list,relate"></field>
    </section>
    <section id="exhibitionAuthorityInformation">
        <field id="preferredExhibition" ui-type="groupfield/preferredExhibition/selfrenderer" ui-func="cspace.preferred">
            <selector>preferred-exhibitionAuthority</selector>
        </field>
        <repeat id="exhibitionOrganizers">
            <field id="exhibitionOrganizer" ui-search="repeatable" autocomplete="person-person"/>
        </repeat>
        <repeat id="exhibitionVenueGroupList/exhibitionVenueGroup">
            <field id="venueName" ui-search="repeatable" autocomplete="person-person"/>
            <field id="venueStartDate" ui-search="range" ui-type="date"/>
            <field id="venueEndDate" ui-search="range" ui-type="date"/>
            <field id="venueAttendance" ui-search="range" ui-type="validated" datatype="integer"/>
        </repeat>
        <repeat id="exhibitionLocationsInternal">
            <field id="exhibitionLocationInternal" ui-search="repeatable" autocomplete="location-location"/>
        </repeat>
        <repeat id="exhibitionCurators">
            <field id="exhibitionCurator" ui-search="repeatable" autocomplete="person-person"/>
        </repeat>
        <field id="exhibitionPublication">
            <options>
                <option id="">Please select a value</option>
                <option id="yes">Y</option>
                <option id="no">N</option>
            </options>
        </field>
        <repeat id="exhibitionCatalogues">
            <field id="exhibitionCatalogue"/>
        </repeat>
        <repeat id="exhibitionLinks">
            <field id="exhibitionLink"/>
        </repeat>
        <field id="exhibitionRemarks"/>
    </section>
    <!-- not used in UI except in autocompletes -->
    <section id="otherInformation">
        <field id="shortIdentifier" mini="search,list,relate" attributes="GET"></field>
        <field id="csid" mini="search,list,relate" attributes="GET"></field>
        <field id="refName" mini="search,list,relate" attributes="GET"></field>
        <field id="uri" mini="search,list,relate" attributes="GET"></field>
    </section>
</record>
