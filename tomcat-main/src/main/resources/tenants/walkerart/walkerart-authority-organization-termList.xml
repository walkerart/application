<record id="preferredOA">
    <section id="termInformation">
        <repeat id="orgTermGroupList/orgTermGroup">
            <field id="termLanguage" autocomplete="vocab-languages" ui-type="enum">
                <!-- adding URN for default language value -->
                <enum>
                    <default>urn:cspace:walkerart.org:vocabularies:name(languages):item:name(eng)'English'</default>
                    <blank-value>Please select a value</blank-value>
                </enum>
                <selector>orgAuthority-termLanguage</selector>
            </field>
        </repeat>
    </section>
</record>